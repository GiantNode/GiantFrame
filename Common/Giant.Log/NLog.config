<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="key1" value="myvalue1"/>
  <variable name="key2" value="myvalue2"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->

  <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
  
<!--如下配置在日志中会显示 
${callsite:className=false:methodName=false:fileName=true:includeSourcePath=false:skipFrames=2}
1.文件名
2.类名
3.方法名
4.输出信息 ${message}
5.换行 ${newline}
6.自定义变量 ${var:appIdFormat} 自定义变量可以在代码中赋值
-->

<targets>
  <target xsi:type ="File" name="Trace"
          fileName="${basedir}/logs/${shortdate}-Trace.log"
          layout="${longdate} ${uppercase:${level}} ${callsite:className=true:methodName=true:fileName=true:includeSourcePath=false:skipFrames=0} " />
  </targets>

  <targets>
    <target xsi:type="File" name="Debug"
        fileName="${basedir}/logs/${shortdate}-Debug.log"
        layout="${longdate} ${uppercase:${level}} ${message} ${callsite:className=true:methodName=true:fileName=true:includeSourcePath=false:skipFrames=2}" />
  </targets>

  <targets>
    <target xsi:type="File" name="Info"
        fileName="${basedir}/logs/${shortdate}-Info.log"
        layout="${longdate} ${uppercase:${level}} ${message} ${callsite:className=true:methodName=true:fileName=true:includeSourcePath=false:skipFrames=2}" />
  </targets>

  <targets>
    <target xsi:type="File" name="Warn"
        fileName="${basedir}/logs/${shortdate}-Warn.log"
        layout="${longdate} ${uppercase:${level}} ${message} ${callsite:className=true:methodName=true:fileName=true:includeSourcePath=false:skipFrames=2}" />
  </targets>

  <targets>
    <target xsi:type="File" name="Error"
        fileName="${basedir}/logs/${shortdate}-Error.log"
        layout="${longdate} ${uppercase:${level}} ${message} ${callsite:className=true:methodName=true:fileName=true:includeSourcePath=false:skipFrames=2}" />
  </targets>

  <targets>
    <target xsi:type="File" name="Fatal"
        fileName="${basedir}/logs/${shortdate}-Fatal.log"
        layout="${longdate} ${uppercase:${level}} ${message} ${callsite:className=true:methodName=true:fileName=true:includeSourcePath=false:skipFrames=2}" />
  </targets>

  <rules>
    <!--Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"-->
    
    <logger name="*" minlevel="Trace" maxlevel ="Trace" writeTo="Trace" />
    <logger name="*" minlevel="Debug" maxlevel ="Debug" writeTo="Debug" />
    <logger name="*" minlevel="Info" maxlevel ="Info" writeTo="Info" />
    <logger name="*" minlevel="Warn" maxlevel ="Warn" writeTo="Warn" />
    <logger name="*" minlevel="Error" maxlevel ="Error" writeTo="Error" />
    <logger name="*" minlevel="Fatal" maxlevel ="Fatal" writeTo="Fatal" />

  </rules>
</nlog>
